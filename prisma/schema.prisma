model CallTemplate {
  id          String   @id @default(cuid())
  
  name        String
  type        String   // Pre-filled call type
  priority    String
  
  descriptionTemplate String
  
  department  String?  // null for universal
  isActive    Boolean  @default(true)
  
  createdBy   String
  createdAt   DateTime @default(now())
